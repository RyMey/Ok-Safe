<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.jeruk.ok_safe.ui.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo_with_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_drop_down_white"
                android:drawableRight="@drawable/ic_arrow_drop_down_white"
                android:paddingRight="4dp"
                android:text="@string/_62"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_sign_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:hint="@string/hint_phone_number"
                android:inputType="phone"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_cancel_white"
                android:visibility="invisible"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_continue_disabled"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorDivider"
            android:enabled="false"
            android:text="@string/masuk"
            android:textColor="@color/colorSecondaryText"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:text="@string/masuk"
            android:textColor="@color/colorWhite"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>
